{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:8080/v5/index.html",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Start Webserver (port 8081)",
            "program": "${workspaceFolder}/bin/webserver.js",
            "args": ["8081"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Start Node.js Webserver (port 8081) + Chrome",
            "url": "http://localhost:8081/",  // Must match port in tasks.json "Start Webserver" task
            "webRoot": "${workspaceFolder}/v5",
            // References task label from tasks.json - will wait until "endsPattern" is matched
            "preLaunchTask": "Start Webserver"
        }
    ]
}