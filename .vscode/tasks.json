{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Webserver",
            "type": "shell",
            "command": "node",
            "args": [
                "bin/webserver.js",
                "8080"
            ],
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^$",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".",
                    "endsPattern": "Port: 8080"
                }
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        }
    ]
}
